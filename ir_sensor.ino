/* * IR Sensor Code */#define SENSOR A0#define START_DELAY_MS 5000#define SENSOR_READINGS 10#define READING_DELAY 500int readingNum = 0;void setup() {  Serial.begin(9600);  Serial.println("Starting...");  Serial.print("Waiting ");  Serial.print(START_DELAY_MS/1000);  Serial.println(" seconds...");  delay(START_DELAY_MS);}void loop() {  if (readingNum < SENSOR_READINGS) {    int val = analogRead(SENSOR);    int invertedVal = 1024 - val;    Serial.print("Sensor Reading #");    Serial.print(readingNum + 1);    Serial.print(": ");    Serial.println(invertedVal);    readingNum++;    delay(READING_DELAY);  }  else if (readingNum == 10) {    Serial.println("Sensor Reading Complete.");    readingNum++;  }} 